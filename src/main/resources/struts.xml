<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.multipart.maxSize" value="10240"></constant>
	<constant name="struts.action.excludePattern" value=".*/static/.*" />
	<constant name="struts.objectFactory" value="org.apache.struts2.spring.StrutsSpringObjectFactory" />
	<package name="delta" extends="json-default">
	
		<interceptors>
	        <interceptor name="authentication"
	            class="com.delta.interceptors.AuthenticationInterceptor"></interceptor>
	        <interceptor-stack name="authStack">
	            <interceptor-ref name="authentication"></interceptor-ref>
	            <interceptor-ref name="defaultStack"></interceptor-ref>
	        </interceptor-stack>
	    </interceptors>
		
		<global-results>
		    <result name="login" type="redirect">/index</result>
		</global-results>

		<action name="index">
			<result>/jsp/index.jsp</result>
		</action>
		
		<action name="list">
			<result>/jsp/list.jsp</result>
		</action>
		
		<action name="record">
			<interceptor-ref name="authStack"></interceptor-ref>
			<result>/jsp/record.jsp</result>
		</action>
		
		<action name="tag" class="com.delta.actions.TagAction" method="execute">
			<result name="success">/jsp/tag.jsp</result>
		</action>
		
		
		<!-- Ajax apis -->
		<action name="authenticate" class="com.delta.api.AuthenticationAPI">
			<result name="success" type="json">
				<param name="root">action</param>
				<param name="excludeProperties">password</param>
				<param name="excludeNullProperties">true</param>
			</result>
			<result name="input" type="json">
				<param name="root">action</param>
				<param name="includeProperties">
					errorAuthen
				</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		
		<action name="tagSave" class="com.delta.actions.TagAction" method="save">
			<result name="success" type="json">
				<param name="includeProperties"></param>
			</result>
		</action>

	</package>
</struts>